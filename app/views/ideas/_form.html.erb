<%= form_with(model: idea, local: true) do |form| %>
    <% if idea.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

          <ul>
            <% idea.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row col-md-6">

      <div class="form-group row">
        <label for="<%= :idea_name %>">Name:</label>
        <input class="form-control" id="<%= :idea_name %>" placeholder="Enter name">
        <!--<%= form.text_field :name, id: :idea_name %>-->
      </div>

      <div class="form-group row">
        <label for="<%= :description %>">Description:</label>
        <!--<%= form.label :description %>-->
        <textarea class="form-control" id="<%= :idea_description %>" placeholder="Enter description"></textarea>
        <!--<%= form.text_area :description, id: :idea_description %>-->
      </div>


      <div class="form-group row">
        <label for="<%= :picture %>">Picture:</label>
        <!--<%= form.label :picture %>-->
        <input class="form-control" id="<%= :idea_picture %>" type="file">
        <!--<%= form.file_field :picture, id: :idea_picture %>-->
      </div>

      <button class="btn btn-primary">Create idea! <i class="fa fa-lightbulb-o" aria-hidden="true"></i></button>

    </div>

<% end %>
