<%= form_with(model: idea, local: true) do |form| %>
    <% if idea.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

          <ul>
            <% idea.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row col-md-6">
      <div class="form-group row">
        <label for="<%= :idea_name %>">Name:</label>
        <%= form.text_field :name, id: :idea_name, :class => 'form-control' %>
      </div>

      <div class="form-group row">
        <label for="<%= :description %>">Description:</label>
        <%= form.text_area :description, id: :idea_description, :class => 'form-control' %>
      </div>

      <div class="form-group row">
        <label for="<%= :picture %>">Picture:</label>
        <%= form.file_field :picture, id: :idea_picture, :class => 'form-control' %>
      </div>

      <button class="btn btn-primary">Go! <i class="fa fa-lightbulb-o"></i></button>
    </div>
<% end %>